<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartRecFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/button_startRec"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginBottom="288dp"
            android:layout_weight="1"
            android:elevation="0dp"
            app:iconPadding="0dp"
            android:text="STARTRECORDING"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/button_startRec"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.549">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="282dp"
                android:layout_height="65dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="267dp"
                android:layout_height="65dp"
                android:hint="enter your server ID" />

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/enter_server_api"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Button" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>